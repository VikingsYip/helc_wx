}

.text_warn{
  color: red;
  border-bottom: red solid 1px;
  font-size: 20rpx;
}

.bottom_b{
  height: 80rpx;
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
}

.button_sub{
  background-color: #E84F4E;
  color: white;
  font-size: 24rpx;
  width: 100rpx;
  height: 40rpx;
  border-radius: 20rpx;
}

.button_add{
  background-color: #0791ED;
  color: white;
  font-size: 24rpx;
  width: 100rpx;
  height: 40rpx;
  border-radius: 20rpx;
}

.text_count{
  border: solid #dcdcdc 1rpx;
  padding: 6rpx 30rpx;
  margin: 0 20rpx;
}

.number{
  border-radius: 4rpx;
  border: #dcdcdc 1rpx solid;
