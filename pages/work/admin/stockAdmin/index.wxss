}

.input_name{
  width: 540rpx;
  padding: 10rpx 10rpx;
  border: solid #dcdcdc 1rpx;
  border-radius: 6rpx;
  color: #333;
  font-size: 28rpx;
  margin: 20rpx 0 20rpx;
  height: 100rpx;
}

.category{
  padding: 20rpx 6rpx;
  text-align: center;
  color: gray;
}

.checked{
  background-color: white;
