/* components/model/model.wxss */
.block_border{
  border-radius: 10rpx;
  overflow: hidden;
  padding: 30rpx;
  box-sizing: border-box;
  color: white;
  background-color: black;
}

.row{
  display: flex;
  align-items: center;
}

.mask{
  position: fixed;
  top:0;
  right: 0;
  bottom:0;
  left:0;
  width: 100%;
  height: 100%;
  margin: auto;
  background: rgba(0,0,0,0.3);
  z-index:99;
}

.modal{
  position: fixed;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 100;
  font-size:28rpx;
}

.modal_body{
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  /* padding: 0 30rpx; */
  box-sizing: border-box;
}

.icon-png{
  width: 8vw;
  height: 8vw;
  margin-right: 2vw;
}